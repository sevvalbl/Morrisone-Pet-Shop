@model IEnumerable<Morrisone_Pet_Shop.Areas.Product>

<html lang="tr">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="row">
    <h2>Tüm Ürünler</h2>
    <hr />
      @foreach (var item in Model)
    {
        <div class="col-lg-4">
            <div class="card mb-4" >
       

        <div class="card">
            <img class="card-img-topu" src="/ProductImages/@Html.DisplayFor(modelItem => item.Image)" /> 
            <div class="card-body">
                <h4 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h4>
                <p class="card-text"> @Html.DisplayFor(modelItem => item.Description)</p>
                <a href="#" class="btn btn-primary">Satın Al</a>
            </div>
        </div> 
        </div> 
        </div>
        <br>
    }
    </div>
  

</body>
</html>
