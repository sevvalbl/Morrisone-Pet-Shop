@model Morrisone_Pet_Shop.Areas.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Detay</h1>

<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ürün İsmi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
         Açıklama
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
          Fiyat
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
          Kategori
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            Resim
        </dt>
        <dd class="col-sm-10">
           <img src="/ProductImages/@Html.DisplayFor(model => model.Image)" height="100") />
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Düzenle</a> |
    <a asp-action="Index">Ürün Listesi</a>
</div>
