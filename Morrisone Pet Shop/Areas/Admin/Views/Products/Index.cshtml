@model IEnumerable<Morrisone_Pet_Shop.Areas.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Ürün Listesi</h1>

<p>
    <a asp-action="Create">Yeni Ürün Girişi</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
              Ürün İsmi
            </th>
            <th>
               Açıklama
            </th>
            <th>
                Resim
            </th>
            <th>
                Fiyat
            </th>
            <th>
              Kategori
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
                <td>
                    <img src="/ProductImages/@Html.DisplayFor(modelItem => item.Image)" alt="Resim Yüklenemedi" height="100"/>
                </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Price) ₺
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Düzenle</a> |
                <a class="btn btn-light" asp-action="Details" asp-route-id="@item.ID">Detay</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
